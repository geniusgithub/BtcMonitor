<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:background="@color/window_bg" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
  
    <RelativeLayout android:background="@drawable/top_bar_bg" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="fill_parent" android:layout_height="40dp">
   		<Button
	        android:id="@+id/btn_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:textColor="#ffffff" 
	        android:background="@drawable/selector_btn_back"/>
   		<TextView android:textSize="18sp" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/txt_about" android:layout_centerInParent="true"/>
	</RelativeLayout>
    
    <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:layout_margin="10dp" android:textSize="16.0dip" android:textColor="#ffff0000" android:autoLink="web" android:linksClickable="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/about_content" />
        </LinearLayout>
    </ScrollView>
    
</LinearLayout>
