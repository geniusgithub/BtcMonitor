<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:background="@color/window_bg" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"/>
    
    <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16.0dip" android:textColor="#ffff0000" android:autoLink="web" android:linksClickable="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="@string/help_warn" />         
        </LinearLayout>
    </ScrollView>
        

</LinearLayout>
